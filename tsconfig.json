{
  "compilerOptions": {
    "jsx": "react-jsx", // React 17 이상
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"], // 예시: 경로 설정
    }
  }
}